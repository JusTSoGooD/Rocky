@model IEnumerable<Rocky.Models.ApplicationType>                                   //View для страницы категорий


<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Application Type List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-action="Create" class="btn btn-primary">
                Create New Application Type
            </a>
        </div>
    </div>

    <br /><br />


    @if (Model.Count() > 0)                          //можно комбинировать язык c# и html + ниже формирование таблицы категорий
    {
        <table class="table table-bordered table-stripped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Category Name
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="50%">@obj.Name</td>
                        <td class="text-center">
                            <div class="w-75 btn-group" role="group">
                                <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Edit" class="btn btn-primary mx-2">
                                    <i class="fa-regular fa-pen-to-square"></i> 
                                </a>
                                <a asp-controller="ApplicationType" asp-route-Id="@obj.Id" asp-action="Delete" class="btn btn-danger mx-2">
                                    <i class="fa-solid fa-trash"></i> 
                                </a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    else
    {
        <p> No application type exists</p>
    }



</div>